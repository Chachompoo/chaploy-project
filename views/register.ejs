<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register - Chaploy</title>
  <link rel="stylesheet" href="/stylesheets/style.css">

  <style>
    .alert-success {
      color: #256c3a;
      padding: 10px 18px 12px 18px;
      margin: 10px 0 20px 0;
      border-radius: 6px;
      text-align: center;
      font-weight: 500;
      line-height: 1.5;       
      transform: translateY(-6px);
      opacity: 1;
      transition: opacity 0.5s ease-out;
}

    .alert-error {
      color: #9b1c1c;
      padding: 10px 18px 12px 18px;
      margin: 10px 0 20px 0;
      border-radius: 6px;
      text-align: center;
      font-weight: 500;
      line-height: 1.5;       
      transform: translateY(-6px);
      opacity: 1;
      transition: opacity 0.5s ease-out;
    }
    .fade-out {
      opacity: 0;
    }
  </style>
</head>
<body class="register-page">
  <%
    var success = (typeof success !== 'undefined') ? success : null;
    var error = (typeof error !== 'undefined') ? error : null;
  %>

  <div class="register-main-container">
    <div class="register-form-box">
      <h2>CREATE YOUR ACCOUNT</h2>

      <% if (success) { %>
        <div class="alert-success">
          <%= success %>
          <br>
          <span id="countdown">Redirecting in 5 seconds...</span>
        </div>
        <script>
          let seconds = 5;
          const countdownEl = document.getElementById("countdown");
          const alertBox = document.querySelector(".alert-success");
          const timer = setInterval(() => {
            seconds--;
            countdownEl.textContent = `Redirecting in ${seconds} seconds...`;
            if (seconds <= 0) {
              clearInterval(timer);
              alertBox.classList.add("fade-out");
              setTimeout(() => window.location.href = "/login", 500);
            }
          }, 1000);
        </script>
      <% } %>

      <% if (error) { %>
        <div class="alert-error"><%= error %></div>
      <% } %>

      <form action="/register" method="POST" class="register-form">
        <div class="register-input-group">
          <input type="text" name="firstName" placeholder=" " required>
          <label>First Name</label>
        </div>
        <div class="register-input-group">
          <input type="text" name="lastName" placeholder=" " required>
          <label>Last Name</label>
        </div>
        <div class="register-input-group">
          <input type="email" name="email" placeholder=" " required>
          <label>Email</label>
        </div>
        <div class="register-input-group">
          <input 
            type="text" 
            name="phone" 
            placeholder=" " 
            required 
            maxlength="10" 
            pattern="[0-9]{10}" 
            inputmode="numeric"
            title="Please enter exactly 10 digits (numbers only)"
          >

          <label>Phone</label>
        </div>
        <div class="register-input-group">
          <input type="text" name="username" placeholder=" " required>
          <label>Username</label>
        </div>
        <div class="register-input-group">
          <input type="password" name="password" placeholder=" " required>
          <label>Password</label>
        </div>

        <button type="submit" class="register-submit-button">REGISTER</button>

        <div class="register-login-link">
          Already have an account? <a href="/login">Login here</a>
        </div>
      </form>
    </div>
  </div>

  <!-- ✅ SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.querySelector(".register-form").addEventListener("submit", function (e) {
  const password = document.querySelector('input[name="password"]').value.trim();

  // ✅ Regex ตรวจรหัสผ่าน (ต้องมี ตัวใหญ่ ตัวเล็ก ตัวเลข และอักขระพิเศษ)
  const strongPassword = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$/;

  if (!strongPassword.test(password)) {
    e.preventDefault(); // ❌ หยุดส่งฟอร์ม
    Swal.fire({
      icon: 'warning',
      title: 'Weak Password',
      html: `
        <p style="font-size:16px;">Your password must include:</p>
        <ul style="text-align:left; font-size:15px; line-height:1.6;">
          <li>✔ At least 8 characters</li>
          <li>✔ One uppercase letter</li>
          <li>✔ One lowercase letter</li>
          <li>✔ One number</li>
          <li>✔ One special character (e.g. !, @, #, $, %, ., _)</li>
        </ul>
      `,
      confirmButtonColor: '#43593E',
      confirmButtonText: 'Got it!'
    });
  }
});
</script>

</body>
</html>
