<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Set New Password - Chaploy</title>
  <link rel="stylesheet" href="/stylesheets/style.css">

  <style>
    /* เพิ่มแค่ส่วนข้อความสำเร็จและนับถอยหลัง */
    .reset-success {
      color: #a0ffb3;
      font-weight: 500;
      font-size: 18px;
      margin-bottom: 20px;
      animation: fadeIn 0.4s ease-in;
    }

    .reset-error {
      color: #ff8080;
      font-weight: 500;
      font-size: 18px;
      margin-bottom: 20px;
      animation: fadeIn 0.4s ease-in;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .fade-out {
      opacity: 0;
      transition: opacity 0.5s ease-out;
    }
  </style>
</head>
<body class="reset-page">
  <div class="reset-container">
    <h2>SET NEW PASSWORD</h2>

    <% if (message) { %>
      <p class="reset-success">
        ✔ <%= message %><br>
        <span id="countdown">Redirecting to login in 5 seconds...</span>
      </p>

      <script>
        let seconds = 5;
        const countdownEl = document.getElementById("countdown");
        const msg = document.querySelector(".reset-success");

        const timer = setInterval(() => {
          seconds--;
          countdownEl.textContent = `Redirecting to login in ${seconds} seconds...`;
          if (seconds <= 0) {
            clearInterval(timer);
            msg.classList.add("fade-out");
            setTimeout(() => window.location.href = "/login", 500);
          }
        }, 1000);
      </script>
    <% } %>

    <% if (error) { %>
      <p class="reset-error">✖ <%= error %></p>
    <% } %>

    <form action="/reset/<%= token %>" method="POST" class="reset-form">
      <div class="reset-input-group">
        <input type="password" id="password" name="password" placeholder=" " required>
        <label for="password">New Password *</label>
      </div>

      <div class="reset-input-group">
      <input type="password" id="confirmPassword" name="confirmPassword" placeholder=" " required>
      <label for="confirmPassword">Confirm Password *</label>
    </div>


      <button type="submit" class="reset-btn">CHANGE PASSWORD</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  const form = document.querySelector('.reset-form');
  const pass = document.getElementById('password');
  const confirmPass = document.getElementById('confirmPassword');
  const button = document.querySelector('.reset-btn');

  form.addEventListener('submit', function (e) {
    // ถ้ารหัสไม่ตรงกัน
    if (pass.value !== confirmPass.value) {
      e.preventDefault();
      Swal.fire({
        icon: 'error',
        title: 'Passwords do not match',
        text: 'Please make sure both password fields are identical.',
        confirmButtonColor: '#43593E'
      });
      return;
    }

    // เพิ่ม loading spinner ตอนส่ง
    button.classList.add('loading');
    button.innerHTML = '<span class="spinner"></span>Updating...';
  });
</script>
</body>
</html>
